# ==============================================
# SHOGUNITO WEB - Environment Variables Example
# ==============================================
# Copy this file to .env and fill in your values

# ==============================================
# API CONFIGURATION
# ==============================================
# API base URL
VITE_API_URL=http://localhost:3000

# API timeout (in milliseconds)
VITE_API_TIMEOUT=10000

# ==============================================
# APPLICATION CONFIGURATION
# ==============================================
# Application name
VITE_APP_NAME=Shogunito

# Application version
VITE_APP_VERSION=1.0.0

# Environment
VITE_NODE_ENV=development

# ==============================================
# FEATURE FLAGS (optional)
# ==============================================
# Enable/disable features during development
VITE_ENABLE_MOCK_DATA=false
VITE_ENABLE_DEBUG_MODE=true
VITE_ENABLE_ANALYTICS=false

# ==============================================
# UI CONFIGURATION
# ==============================================
# Theme configuration
VITE_DEFAULT_THEME=light
VITE_ENABLE_DARK_MODE=true

# Pagination defaults
VITE_DEFAULT_PAGE_SIZE=20
VITE_MAX_PAGE_SIZE=100

# ==============================================
# FILE UPLOAD CONFIGURATION
# ==============================================
# Maximum file size for uploads (in bytes)
VITE_MAX_FILE_SIZE=10485760

# Accepted file types
VITE_ACCEPTED_FILE_TYPES=.jpg,.jpeg,.png,.exr,.mov,.mp4,.pdf

# ==============================================
# EXTERNAL SERVICES (if needed)
# ==============================================
# Google Analytics (if using)
# VITE_GA_TRACKING_ID=GA-XXXXXXXXX

# ==============================================
# DEVELOPMENT CONFIGURATION
# ==============================================
# Hot reload configuration
VITE_HMR_PORT=5173
VITE_HOST=0.0.0.0

# ==============================================
# SHOTGRID INTEGRATION (future)
# ==============================================
# ShotGrid API configuration
# VITE_SHOTGRID_URL=https://your-studio.shogunitostudio.com
# VITE_SHOTGRID_SCRIPT_NAME=your-script-name