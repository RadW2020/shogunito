# ==============================================
# SHOGUN - Environment Variables Example
# ==============================================
# Copy this file to .env.production for production deployment
# DO NOT commit .env files with actual secrets!

# Database Configuration
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_USERNAME=shogun_prod
DATABASE_PASSWORD=CHANGE_THIS_STRONG_PASSWORD
DATABASE_NAME=shogun_prod

# JWT Configuration
JWT_SECRET=CHANGE_THIS_LONG_RANDOM_STRING_AT_LEAST_32_CHARS
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=CHANGE_THIS_ANOTHER_LONG_RANDOM_STRING
JWT_REFRESH_EXPIRES_IN=7d

# MinIO Configuration
MINIO_ACCESS_KEY=CHANGE_THIS_ACCESS_KEY
MINIO_SECRET_KEY=CHANGE_THIS_SECRET_KEY_AT_LEAST_16_CHARS

# Application URLs
FRONTEND_URL=https://shogunweb.example.com
VITE_API_URL=https://shogunapi.example.com

# Registration
REQUIRE_INVITATION_CODE=true

# Email (if using email features)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@example.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM=noreply@example.com

# Axiom Logging (optional)
# AXIOM_TOKEN=your-axiom-token
# AXIOM_DATASET=shogun-logs

# Node Environment
NODE_ENV=production
